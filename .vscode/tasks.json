{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build current file",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-Wall",
        "-Wextra",
        "-Werror",
        "-Wno-unused-result",
        "-std=c11",
        "-lm",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.out"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Build all C files in folder",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "gcc -Wall -Wextra -Werror -Wno-unused-result -std=c11 -lm *.c -o all_c_programs.out"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Run clang-tidy on current file",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "if command -v clang-tidy-18 >/dev/null 2>&1; then clang-tidy-18 ${file} -- -std=c11; elif command -v clang-tidy >/dev/null 2>&1; then clang-tidy ${file} -- -std=c11; else echo \"clang-tidy not found. Install it: sudo apt install clang-tidy-18\"; bind; fi"
      ],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "type": "cppbuild",
      "label": "C/C++: gcc build active file",
      "command": "/usr/bin/gcc",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "detail": "Task generated by Debugger."
    }
  ]
}